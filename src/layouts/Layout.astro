--- 
import Header from "../components/globals/Header.astro";
import Footer from "../components/globals/Footer.astro";
import '../styles/main.scss';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link href="./css/fonts.css" rel="stylesheet" />
		<link href="./css/fancybox.css" rel="stylesheet" />
		<link href="./css/owl.carousel.css" rel="stylesheet" />
		<link href="./css/select2.min.css" rel="stylesheet" />
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
		<div class="overlay js-overlay"></div>
		<script is:inline src="./js/jquery.js"></script>
		<script is:inline src="./js/fancybox.js"></script>
		<script is:inline src="./js/jquery.validate.min.js"></script>
		<script is:inline src="./js/main.js"></script>
	</body>
</html>

